# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                   controllers.HomeController.index
GET         /connexion          controllers.HomeController.connexion()
GET         /deconnexion        controllers.HomeController.deconnexion()
GET         /inscription        controllers.HomeController.inscription()
POST        /connexion          controllers.HomeController.authentification()
GET         /error-client                                                      controllers.HomeController.errorClient()
GET         /error-server                                                      controllers.HomeController.errorServer(message: String)


# Categorie
GET         /categories                     controllers.CategorieController.reads()
POST        /categories                     controllers.CategorieController.create()
GET         /categories/:id                 controllers.CategorieController.read(id: Long)
POST        /categories/:id/update          controllers.CategorieController.update(id: Long)
GET         /categories/:id/delete          controllers.CategorieController.delete(id: Long)

# SousCategorie
GET         /sous-categories                     controllers.SousCategorieController.reads()
POST        /sous-categories                     controllers.SousCategorieController.create()
GET         /sous-categories/:id                 controllers.SousCategorieController.read(id: Long)
POST        /sous-categories/:id/update          controllers.SousCategorieController.update(id: Long)
GET         /sous-categories/:id/delete          controllers.SousCategorieController.delete(id: Long)

# Client
GET         /clients                        controllers.ClientController.reads()
POST        /clients                        controllers.ClientController.create()
GET         /clients/:id                    controllers.ClientController.read(id: Long)
POST        /clients/:id/update             controllers.ClientController.update(id: Long)
GET         /clients/:id/delete             controllers.ClientController.delete(id: Long)

# Produit
GET         /produits                       controllers.ProduitController.reads()
POST        /produits                       controllers.ProduitController.create()
GET         /produits/:id                   controllers.ProduitController.read(id: Long)
POST        /produits/:id/update            controllers.ProduitController.update(id: Long)
GET         /produits/:id/delete            controllers.ProduitController.delete(id: Long)


# Utilisateur
GET         /utilisateurs                   controllers.UtilisateurController.reads()
POST        /utilisateurs                   controllers.UtilisateurController.create()
GET         /utilisateurs/:id               controllers.UtilisateurController.read(id: Long)
POST        /utilisateurs/:id/update        controllers.UtilisateurController.update(id: Long)
GET         /utilisateurs/:id/delete        controllers.UtilisateurController.delete(id: Long)

# Facture
GET         /factures/initialisation                                          controllers.FactureController.initialisation()

GET         /factures-proformas                                               controllers.FactureController.readsFirstFactureProforma()
GET         /factures-proformas/:referenceFactureProforma                     controllers.FactureController.readsFactureProforma(referenceFactureProforma: String)
POST        /factures-proformas/:referenceFactureProforma                   controllers.FactureController.create(referenceFactureProforma: String)
POST        /factures-proformas/:referenceFactureProforma/updateEntete        controllers.FactureController.updateEntete(referenceFactureProforma: String)
POST        /factures-proformas/:referenceFactureProforma/updateEntete2        controllers.FactureController.updateEntete2(referenceFactureProforma: String)
GET         /factures-proformas/:referenceFactureProforma/edit                 controllers.FactureController.readFactureProforma(referenceFactureProforma: String)
GET         /factures-proformas/:referenceFactureProforma/:id/delete        controllers.FactureController.delete(referenceFactureProforma: String, id: Long)
GET        /factures-proformas/:referenceFactureProforma/delete                                    controllers.FactureController.deleteFacture(referenceFactureProforma: String)
GET        /factures-proformas/:referenceFactureProforma/create-facture-proforma-impression        controllers.FactureController.createFactureProformaImpression(referenceFactureProforma: String)
GET         /factures-proformas/:referenceFactureProforma/create-bon-livraison           controllers.FactureController.createBonLivraison(referenceFactureProforma: String)
GET         /factures-proformas/:referenceFactureProforma/create-facture-definitive           controllers.FactureController.createFactureDefinitive(referenceFactureProforma: String)

GET         /bons-livraisons                                                   controllers.FactureController.readsFirstBonLivraison()
GET         /bons-livraisons/:referenceBonLivraison                             controllers.FactureController.readsBonLivraison(referenceBonLivraison: String)

GET         /factures-definitives                                             controllers.FactureController.readsFirstFactureDefinitive()
GET         /factures-definitives/:referenceFactureDefinitive                 controllers.FactureController.readsFactureDefinitive(referenceFactureDefinitive: String)

GET         /clients/:referenceClient/factures-proformas                        controllers.FactureController.readsFirstFactureProformaByClient(referenceClient: String)
GET         /clients/:referenceClient/bons-commandes                            controllers.FactureController.readsFirstBonLivraisonByClient(referenceClient: String)
GET         /clients/:referenceClient/factures-definitives                      controllers.FactureController.readsFirstFactureDefinitiveByClient(referenceClient: String)


# Rapport
GET        /rapport/download/:codeRapport/:reference                                               controllers.RapportController.download(codeRapport: String, reference: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)